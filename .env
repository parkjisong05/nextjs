# ==============================================
# VSmart Admin Dashboard - Environment Variables for Local Development
# ==============================================

# ----------------------------------------------
# App Information
# ----------------------------------------------
# Used for display purposes in the application
NEXT_PUBLIC_APP_NAME=VSmart Admin Dashboard
NEXT_PUBLIC_APP_VERSION=2.0.2


# ----------------------------------------------
# Next.js Environment
# ----------------------------------------------
# 'development' enables detailed error messages and hot reloading.
# 'production' enables optimizations. This is set automatically during build.
NODE_ENV=development

# PORT=3300
# ==============================================
# API Configuration (REQUIRED)
# ==============================================

# ✅ Full base URL of the target API.
# This will be called directly from the client's browser.
# The API server MUST have CORS configured to allow requests from http://localhost:3000
NEXT_PUBLIC_API_BASE_URL=https://wf4pos-revamp.datanow-svn.com/wf4pos-revamp/api/data/v1

# ✅ Authentication Bearer Token for the API.
# WARNING: This token will be visible in the client-side browser code.
# Ensure it has the minimum required permissions.
NEXT_PUBLIC_API_AUTH_TOKEN=xxxxxxxxxxxxxx

# ✅ API request timeout in milliseconds.
# Default is 15000 (15 seconds).
NEXT_PUBLIC_API_TIMEOUT=15000


# ==============================================
# Features & Debugging
# ==============================================

# ✅ Set to 'true' to enable console logs and debugging features in inboxService.ts
# Set to 'false' for production to reduce console noise.
NEXT_PUBLIC_DEBUG=true

# Feature flags for enabling/disabling parts of the application
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true
NEXT_PUBLIC_ENABLE_DEVTOOLS=true


# ==============================================
# Build & Deployment Settings
# ==============================================

# Set to true to analyze the build bundle size with @next/bundle-analyzer
BUILD_ANALYZE=false